# Google Cloud Deployment Configuration with Gemini 2.5 Pro
# ============================================================

# Gemini 2.5 Pro API Configuration
# Using Google AI Studio API (OpenAI-compatible format)
API_KEY=AIzaSyC7pKCPc9dInPlk9u-84qi2yYOE4HuZaDE
API_BASE=https://generativelanguage.googleapis.com/v1beta/openai/
MODEL_NAME=gemini-2.0-flash-exp
TEMPERATURE=0.7
MAX_TOKENS=8192

# MongoDB Configuration (Use MongoDB Atlas for managed service)
# Create a free cluster at https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=manus
# MONGODB_USERNAME=<your-username>
# MONGODB_PASSWORD=<your-password>

# Redis Configuration (Use Google Cloud Memorystore)
# Or use Upstash Redis for serverless option
REDIS_HOST=<your-memorystore-ip>
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=<your-redis-password>

# Sandbox Configuration
SANDBOX_IMAGE=simpleyyt/manus-sandbox
SANDBOX_NAME_PREFIX=sandbox-gcp
SANDBOX_TTL_MINUTES=30
SANDBOX_NETWORK=manus-network

# Search Configuration
SEARCH_PROVIDER=google
GOOGLE_SEARCH_API_KEY=<your-google-search-api-key>
GOOGLE_SEARCH_ENGINE_ID=<your-search-engine-id>

# Authentication Configuration
AUTH_PROVIDER=password
PASSWORD_SALT=<generate-random-salt>
PASSWORD_HASH_ROUNDS=10

# JWT Configuration
JWT_SECRET_KEY=<generate-strong-secret-key-here>
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (Optional - for password auth)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=your-email@gmail.com

# Log Configuration
LOG_LEVEL=INFO

# Google Cloud Specific
GCP_PROJECT_ID=<your-gcp-project-id>
GCP_REGION=us-central1
BACKEND_URL=https://backend-<hash>-uc.a.run.app
