# =============================================================================
# AI Manus Configuration
# =============================================================================
# Copy this file to .env and update values for your environment.
# For production, ensure all security-critical settings are properly configured.

# -----------------------------------------------------------------------------
# Environment Mode
# -----------------------------------------------------------------------------
# Options: development, staging, production
# IMPORTANT: Set to "production" in production environments to enable
# security validations (JWT secret, password salt, etc.)
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Model Provider Configuration
# -----------------------------------------------------------------------------
# Required: Your LLM API key (OpenAI, Deepseek, etc.)
API_KEY=
API_BASE=https://api.deepseek.com/v1

# Model configuration
MODEL_NAME=deepseek-chat
TEMPERATURE=0.7
MAX_TOKENS=2000

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DATABASE=manus
#MONGODB_USERNAME=
#MONGODB_PASSWORD=

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
#REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Sandbox Configuration
# -----------------------------------------------------------------------------
#SANDBOX_ADDRESS=
SANDBOX_IMAGE=simpleyyt/manus-sandbox
SANDBOX_NAME_PREFIX=sandbox
SANDBOX_TTL_MINUTES=30
SANDBOX_NETWORK=manus-network
#SANDBOX_CHROME_ARGS=
#SANDBOX_HTTPS_PROXY=
#SANDBOX_HTTP_PROXY=
#SANDBOX_NO_PROXY=

# -----------------------------------------------------------------------------
# Search Engine Configuration
# -----------------------------------------------------------------------------
# Options: baidu, google, bing
SEARCH_PROVIDER=bing

# Google search configuration, only used when SEARCH_PROVIDER=google
#GOOGLE_SEARCH_API_KEY=
#GOOGLE_SEARCH_ENGINE_ID=

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------
# Options: password, none, local
AUTH_PROVIDER=password

# Password auth configuration (used when AUTH_PROVIDER=password)
# IMPORTANT: Set a secure random salt in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(16))"
PASSWORD_SALT=
# OWASP recommends 100,000+ iterations for PBKDF2-SHA256
PASSWORD_HASH_ROUNDS=100000

# Local auth configuration (used when AUTH_PROVIDER=local)
#LOCAL_AUTH_EMAIL=admin@example.com
#LOCAL_AUTH_PASSWORD=admin

# -----------------------------------------------------------------------------
# JWT Configuration (Security Critical)
# -----------------------------------------------------------------------------
# IMPORTANT: In production, set a strong secret key (min 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins (e.g., https://app.example.com,https://admin.example.com)
# Leave empty to allow all origins (only recommended for development)
CORS_ORIGINS=

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# Only used when AUTH_PROVIDER=password for password reset functionality
#EMAIL_HOST=smtp.gmail.com
#EMAIL_PORT=587
#EMAIL_USERNAME=your-email@gmail.com
#EMAIL_PASSWORD=your-app-password
#EMAIL_FROM=your-email@gmail.com

# -----------------------------------------------------------------------------
# MCP (Model Context Protocol) Configuration
# -----------------------------------------------------------------------------
#MCP_CONFIG_PATH=/etc/mcp.json

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO